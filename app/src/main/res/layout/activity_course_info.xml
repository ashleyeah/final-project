<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CourseInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/illinois"
            android:layout_width="match_parent"
            android:layout_height="50pt"
            app:srcCompat="@drawable/u_of_illinois"
            tools:srcCompat="@drawable/u_of_illinois" />

        <TextView
            android:id="@+id/avail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This course is available for the Spring 2020 semester."
            android:textSize="17sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/ch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/prereq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed-light" />

        <TextView
            android:id="@+id/degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            app:fontFamily="sans-serif-condensed-light" />

    </LinearLayout>
</ScrollView>