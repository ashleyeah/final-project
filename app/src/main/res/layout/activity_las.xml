<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lasComp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - Advanced Composition (ACP) "
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Some curricula may require a specific course"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lasHum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - 6 hours Humanities and Arts (HP or LA) "
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Historical and Philosophical Perspectives"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Literature and the Arts"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lasSoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - 6 hours Social and Behavioral Sciences (SS or BS)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Social Sciences  "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Behavioral Sciences"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lasSci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - 6 hours Natural Sciences and Technology (LS or PS) "
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Life Sciences  "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Physical Sciences"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lasQuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - 2 Quantitative Reasoning Courses"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true" />

        <TextView
            android:id="@+id/lasWest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - 1 Western Cultures (W) Course"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true" />

        <TextView
            android:id="@+id/lasNonw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - 1 Non-Western Cultures (NW) Course"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true" />

        <TextView
            android:id="@+id/lasUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - 1 U.S. Minority Cultures (US) Course"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true" />
    </LinearLayout>
</LinearLayout>